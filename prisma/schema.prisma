// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int         @id @default(autoincrement())
  name      String
  email     String      @unique
  Animation Animation[]
}

model Tag {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  Animations Animation[] @relation(references: [id])
}

model Animation {
  id          Int    @id @default(autoincrement())
  title       String @unique
  description String
  path        String
  user        User   @relation(fields: [userId], references: [id])
  userId      Int
  tags        Tag[]  @relation(references: [id])
}
